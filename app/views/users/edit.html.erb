<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="well">
      <h2>Update Profile</h2>
      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :avatar %>
          <br>
          <%= render 'shared/avatar', user: @user %>
          <br>
          <br>
          <%= f.file_field :avatar %>
        </div>
        <div class="form-group">
          <%= f.label :school_or_work %>
          <%= f.text_field :school_or_work, placeholder: 'Current School/Work', class: 'form-control', :required => 'required' %>
        </div>
        <div class="form-group">
          <%= f.label :interests %>
          <%= f.text_area :interests, placeholder: 'Interests', class: 'form-control', :required => 'required' %>
        </div>
        <div class="form-group">
          <%= f.label :location %>
          <%= f.text_field :location, placeholder: 'Location', class: 'form-control', :required => 'required' %>
        </div>
        <div class="form-group">
          <%= f.label :phone_number %>
          <%= f.number_field  :phone_number, placeholder: 'Phone Number', class: 'form-control', :required => 'required' %>
        </div>
        <div class="form-group">
          <%= f.label :dob %>
          <%= f.text_field :dob, placeholder: 'Date of Birth', class: 'form-control', :required => 'required' %>
        </div>
        <div class="form-group">
          <%= f.label :sex %><br>
          <%= f.select :sex, options_for_seasons, class: 'form-control', prompt: 'Select One', :required => 'required' %>
        </div>
        <div class="actions">
          <%= submit_tag 'I confirm that the information provided is true and accurate', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>