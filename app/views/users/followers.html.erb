<div class="row">
  <div class="col-lg-4">
    <%= render 'shared/user_info' %>
    <%= render 'search_people/form' %>
  </div>
  
  <!--Results-->
  <div class="col-lg-8">
    <h2>Followers</h2>
      <% @followers.each do |user| %>
          <div id="user-<%= user.id %>" class="row well">
            <!--Profile Pic-->
            <div class="text-center col-sm-3">
              <div class="text-center">
                <%= render 'shared/avatar_big', user: user %><br>
              </div>
            </div>
            <!--Information-->
            <div class="text-left col-sm-4">
              <span class="search_name"><%= render 'follows/form', user: user %></span>
              <% if user.dob.present? %>
                <h5 class="text-left">
                  <%= fa_icon user.sex %>
                  <%= "#{pluralize(age(user.dob), 'year')} old" %>
                </h5>
              <% end %>
              <% if user.location.present? %>
                <h5 class="text-left">
                  <%= fa_icon 'map-marker' %>
                  <%= user.location %>
                </h5>
              <% end %>
              <% if user.school_or_work.present? %>
                <h5 class="text-left">
                  <%= fa_icon 'briefcase' %>
                  <%= user.school_or_work %>
                </h5 class="text-left">
              <% end %>
              <button class="btn btn-default"><%= link_to "View More", user %></button>
            </div>
            <!--Actions-->
            <div class="col-sm-3 col-sm-offset-1" style="text-align:right">
              <%= render 'friends/form', user: user %>
            </div>
        </div>
    <% end %>
    
    <% if @followers.blank? %>
    <% end %>
  </div>
</div>